<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAF7FC">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal">

        <TextView
            android:text="@string/tvDetailsTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="30dp"
            android:layout_gravity="center"
            android:textSize="28sp"
            android:textStyle="bold"/>

        <!-- Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginHorizontal="8dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Typle title -->
                <TextView
                    android:id="@+id/tvTypeTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Lost"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp" />

                <!-- Description -->
                <TextView
                    android:id="@+id/tvDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="asdasdma,kjldnaljdnaldnadjadnaljkdna;dnadkmaklsdmadkmakdlmakdmadlamdasklmdakdmadlkm"
                    android:textSize="15sp"
                    android:textColor="#444"
                    android:lineSpacingExtra="4dp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Date-->
        <TextView
            android:id="@+id/tvDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:text="7 days ago"
            android:textSize="14sp"
            android:textColor="#666"
            android:layout_marginBottom="4dp" />

        <!-- Location -->
        <TextView
            android:id="@+id/tvLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:text="At VIC"
            android:textSize="14sp"
            android:textColor="#666"
            android:layout_marginBottom="32dp" />

        <Button
            android:id="@+id/btnRemove"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="@string/btnRemove"
            android:backgroundTint="#7A57D1"
            android:textColor="@android:color/white"
            android:paddingVertical="10dp"
            android:layout_gravity="center"
            android:background="@drawable/rounded_button" />

    </LinearLayout>
</ScrollView>