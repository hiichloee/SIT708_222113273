<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tvResult"
    android:background="@drawable/bg_task_card" android:orientation="vertical"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:padding="16dp" android:layout_marginBottom="12dp"
    android:layout_marginHorizontal="8dp" android:elevation="6dp"
    android:clickable="true" android:focusable="true">

    <TextView
        android:id="@+id/tvResult_Title" android:text="Question"
        android:textSize="18sp" android:textStyle="bold" android:textColor="#FFFFFF"
        android:layout_marginBottom="8dp" android:paddingStart="5dp"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        tools:ignore="RtlSymmetry" />
    <TextView
        android:id="@+id/tvResult_Desc" android:text="Response from the model that you're using"
        android:textColor="#FFFFFF" android:textSize="14sp"
        android:layout_width="wrap_content" android:layout_height="wrap_content" />
</LinearLayout>