<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/bg_gradient"
    android:orientation="vertical"
    android:paddingHorizontal="24dp"
    android:paddingVertical="20dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/btnBack"
        android:layout_width="70dp"
        android:layout_height="35dp"
        android:src="@drawable/ic_arrow_back"
        android:background="@drawable/bg_back_btn"
        android:padding="8dp"
        android:layout_gravity="start"
        android:layout_marginBottom="20dp"
        android:layout_marginHorizontal="5dp"
        android:elevation="4dp"/>

    <!-- Title -->
    <TextView
        android:text="Upgrade"
        android:textSize="44sp" android:textStyle="bold" android:textColor="#000000"
        android:layout_width="wrap_content" android:layout_height="wrap_content"/>

    <TextView
        android:text="Your experience"
        android:textSize="24sp" android:textStyle="bold" android:textColor="#000000"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"/>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:background="@drawable/bg_task_card"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:elevation="6dp" android:clickable="true" android:focusable="true"
        android:paddingHorizontal="16dp" android:paddingVertical="10dp"
        android:layout_marginHorizontal="8dp" android:layout_marginBottom="20dp">

        <TextView
            android:text="Starter"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="Improved Quiz generation"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:layout_marginBottom="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/btn_starter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:text="Purchase"
            android:textSize="20sp"
            android:gravity="center"
            android:textColor="#000"
            android:textStyle="bold"
            android:background="@drawable/bg_green_round_button"/>
    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:background="@drawable/bg_task_card"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:elevation="6dp" android:clickable="true" android:focusable="true"
        android:paddingHorizontal="16dp" android:paddingVertical="10dp"
        android:layout_marginHorizontal="8dp" android:layout_marginBottom="20dp">

        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:text="Intermediate"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:layout_marginEnd="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Best Seller!"
                android:textSize="12sp"
                android:textStyle="bold"
                android:paddingVertical="4dp"
                android:paddingHorizontal="10dp"
                android:background="@drawable/bg_blue_round_button"/>
        </LinearLayout>

        <TextView
            android:text="Improved Quiz generation"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:layout_marginBottom="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/btn_intermediate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:text="Purchase"
            android:textSize="20sp"
            android:gravity="center"
            android:textColor="#000"
            android:textStyle="bold"
            android:background="@drawable/bg_green_round_button"/>
    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:background="@drawable/bg_task_card"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:elevation="6dp" android:clickable="true" android:focusable="true"
        android:paddingHorizontal="16dp" android:paddingVertical="10dp"
        android:layout_marginHorizontal="8dp" android:layout_marginBottom="20dp">

        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:text="Advanced"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:layout_marginEnd="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Best Seller!"
                android:textSize="12sp"
                android:textStyle="bold"
                android:paddingVertical="4dp"
                android:paddingHorizontal="10dp"
                android:background="@drawable/bg_blue_round_button"/>
        </LinearLayout>

        <TextView
            android:text="Improved Quiz generation"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:layout_marginBottom="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/btn_advanced"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:text="Purchase"
            android:textSize="20sp"
            android:gravity="center"
            android:textColor="#000"
            android:textStyle="bold"
            android:background="@drawable/bg_green_round_button"/>
    </LinearLayout>
</LinearLayout>
