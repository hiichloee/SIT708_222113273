<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tvTask"
    android:orientation="vertical" android:background="@drawable/bg_task_card"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:elevation="6dp" android:clickable="true" android:focusable="true"
    android:paddingHorizontal="16dp" android:paddingVertical="10dp"
    android:layout_marginHorizontal="8dp">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:text="âœ¨"
            android:textSize="18sp" android:textStyle="bold" android:textColor="#FFFFFF"
            android:layout_marginBottom="5dp"
            android:layout_width="wrap_content" android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tvTask_Status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:textSize="14sp"
            android:textColor="#00FF00"
            android:layout_marginTop="4dp"
            android:textStyle="bold"/>
    </LinearLayout>


    <TextView
        android:id="@+id/tvTask_Title"
        android:text="Generated Task 1"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tvTask_Desc"
        android:text="Small Description for the generated Task"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:layout_marginBottom="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <!-- Next Button -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end">

        <TextView
            android:id="@+id/btn_History"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:text="History"
            android:textColor="#000"
            android:textStyle="bold"
            android:background="@drawable/bg_green_round_button"
            android:paddingHorizontal="15dp"
            android:layout_marginEnd="10dp"
            android:gravity="center"/>

        <ImageView
            android:id="@+id/ivArrow"
            android:layout_width="60dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_arrow_right"
            android:background="@drawable/bg_green_round_button"
            android:padding="2dp"
            android:scaleType="centerInside"/>
    </LinearLayout>
</LinearLayout>